<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1B79A3"
    android:scrollbarSize="26dp"
    tools:context=".SettingActivity">


    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backArrow"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            android:src="@drawable/user" />

        <ImageView
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-25dp"
            android:src="@drawable/plus" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your Name"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:id="@+id/et_userName"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:orientation="horizontal">



            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="About:"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="About"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:id="@+id/et_userStatus"
                />


        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="SAVE"
            android:id="@+id/btnSave"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
         android:paddingTop="45dp"
        android:paddingBottom="45dp"
        android:background="@drawable/linear_background"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:drawableLeft="@drawable/padlock"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:text="Privacy Policy" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/information_button"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:text="About Us" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/friends"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:text="Invite a Friend" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/bell"
            android:padding="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="15dp"
            android:text="Notification" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/question"
            android:padding="5dp"
            android:drawablePadding="15dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Help" />

            />


    </LinearLayout>


</RelativeLayout>